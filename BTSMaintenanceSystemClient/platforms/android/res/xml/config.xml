<?xml version='1.0' encoding='utf-8'?>
<widget id="bts.maintenance.system.client" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="ldpi" src="www/res/icon/towericon.png" />
    <icon density="mdpi" src="www/res/icon/towericon.png" />
    <icon density="hdpi" src="www/res/icon/towericon.png" />
    <icon density="xhdpi" src="www/res/icon/towericon.png" />
    <splash density="port-hdpi" src="www/res/icon/towericon.png" />
    <splash density="port-ldpi" src="www/res/icon/towericon.png" />
    <splash density="port-mdpi" src="www/res/icon/towericon.png" />
    <splash density="port-xhdpi" src="www/res/icon/towericon.png" />
    <name>BTS Maintenance System Client</name>
    <description>
		A sample Apache Cordova application that responds to the deviceready
		event.
	</description>
    <author>
	    zawodnix
	</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
